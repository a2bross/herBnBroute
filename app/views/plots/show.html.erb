<div class="show-container">
  <div class="plot-cover" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'default-plot-picture.jpg'%>)">
    <h1 id="welcome-plot-name">Welcome to <%= @plot.name %></h1>
    <% if current_user == @plot.user  %>
      <div class="edit-plot-show">
      <%= link_to "Edit", edit_plot_path(@plot) %>
      </div>
      <div class="delete-plot-show">
        <%= link_to "Delete", plot_path(@plot),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
  <div class="plot-details">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-push-8">
          <div class="plot-book">
            <h3>Book this plot for your sheep!</h3>
            <div class="linked_pickers">
              <div class="container">
                <%= render 'flatpickr', plot: @plot, booking: @booking %>
              </div>
            </div>
          </div>
          <div class="plot-info">
              <div>
                <% if @plot.user.photo %>
                  <%= image_tag "avatar_#{@plot.user.photo}.jpg", class:"avatar-show"%>
                <% else %>
                  <%= image_tag "default-user.jpg", class:"avatar-show" %>
                <% end %>
              </div>
            <h3>Details</h3>
            <div class="details-display flex-between">
              <div class="flex-between", id="details-figures">
                <span class="card-description"><%= "#{@plot.daily_price}â‚¬ per day" %></span>
                <div class="flex-between" >
                  <i class="fa fa-paw" aria-hidden="true"></i>
                  <p>  <%= @plot.capacity %></p>
                </div>
              </div>
              <div>
                <%= @plot.user.first_name %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 col-sm-pull-4">
          <div class="plot-location">
            <h3> Find us at ...</h3>
            <p><i class="fa fa-map-marker" aria-hidden="true"></i>   <%= @plot.location %></p>
          </div>
           <div class="plot-description">
            <h3> A bit more about this plot ...</h3>
            <p> <%= @plot.description %></p>
              <div id="map" class="map-show"></div>
                <script>
                  function initMap() {
                    var uluru = {lat: 48.862725, lng: 2.287592000000018};
                    var map = new google.maps.Map(document.getElementById('map'), {
                      zoom: 9,
                      center: uluru
                    });
                    var marker = new google.maps.Marker({
                    position: uluru,
                    map: map
                    });
                  }
                </script>
                <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAUr5aqT7ZZbHVhE1yjEtlkYt33hh63Axk&callback=initMap">
              </script>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
