<head>

  <style>
    #map {
    height: 400px;
    width: 100%;
       }
  </style>
</head>

<body>
  <h1>Welcome to herBnbroute !</h1>
  <h2>Choose your plot</h2>

  <div class="main-container">
    <div class="cards-container">
      <div class="row">
        <% @plots.each do |plot| %>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class= "card">
             <div class="card-photo" style="background-image: url('<%= image_path 'photo.jpg' %>');"></div>
                <div class="card-name"><%= link_to "#{plot.name}", plot_path(plot) %></div>
              <li class="card-description"><%= link_to "#{plot.daily_price}â‚¬ per day" %></li>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="map"></div>
  </div>

  <!-- Google map scripts -->
  <script>
    function initMap() {
      var uluru = {lat: 48.862725, lng: 2.287592000000018};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 4,
        center: uluru
      });
      var marker = new google.maps.Marker({
        position: uluru,
        map: map
      });
    }
  </script>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAUr5aqT7ZZbHVhE1yjEtlkYt33hh63Axk&callback=initMap">
  </script>

</body>
